<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <div class="login-container">
      <!-- Logo -->
      <div class="login-logo">
        <a href="/">
          <img src="/assets/images/NORM.png" alt="Norm's Trading Post Logo" />
        </a>
      </div>

      <!-- Register Form -->
      <form class="login-box" action="/register" method="POST">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Enter your email" value="<%= (typeof email !== 'undefined' ? email : '') %>" required />

        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" required />

        <label for="repassword">Confirm Password</label>
        <input type="password" id="repassword" name="repassword" placeholder="Confirm your password" required />

        <button class="primary-button" type="submit">Register</button>
        <a href="/login" class="secondary-button">Log In</a>
      </form>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>
