<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

    <div class="sell-container">
      <h1>Sell Item</h1>
      <div class="form-container">
        <form action="/listings" method="POST" enctype="multipart/form-data">
          <label for="name">Name of Item</label>
          <input type="text" id="name" name="name" placeholder="Bicycle" required />

          <label for="condition">Condition</label>
          <select id="condition" name="condition" required>
            <option value="" disabled selected hidden>Select Condition</option>
            <option value="New">New</option>
            <option value="Like New">Like New</option>
            <option value="Very Good">Very Good</option>
            <option value="Good">Good</option>
            <option value="Other">Other</option>
          </select>

          <label for="price">Price</label>
          <input type="number" id="price" name="price" placeholder="119.99" step="0.01" required />

          <label for="image">Image</label>
          <input type="file" id="image" name="image" required />

          <label for="description">Description</label>
          <textarea id="description" name="description" placeholder="Specialized brand, 10 speed road bike." required minlength="10"></textarea>

          <button type="submit" class="primary-button">Submit</button>
        </form>
      </div>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>
