<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

    <div class="browse-container">
      <!-- Sidebar for filters -->
      <div class="sidebar">
        <h3>Keywords</h3>
        <div class="filters">
          <button>Spring ✕</button>
          <button>Smart ✕</button>
          <button>Modern ✕</button>
        </div>

        <div class="filter-group">
          <label><input type="checkbox" /> Label 1</label>
          <label><input type="checkbox" /> Label 2</label>
          <label><input type="checkbox" /> Label 3</label>
        </div>

        <h3>Price</h3>
        <div class="filter-group">
          <input type="range" min="0" max="100" />
          <div class="price-range">
            <span>Asking Price: $0</span>
            <span>$100</span>
          </div>
        </div>

        <h3>Color</h3>
        <div class="filter-group">
          <label><input type="checkbox" /> Red</label>
          <label><input type="checkbox" /> Blue</label>
          <label><input type="checkbox" /> Green</label>
        </div>

        <h3>Size</h3>
        <div class="filter-group">
          <label><input type="checkbox" /> Small</label>
          <label><input type="checkbox" /> Medium</label>
          <label><input type="checkbox" /> Large</label>
        </div>
      </div>

      <!-- Product Listing -->
      <div class="products-container">
        <div class="sort-buttons">
          <button class="active">New</button>
          <button>Price ascending</button>
          <button>Price descending</button>
          <button>Rating</button>
        </div>

        <!-- Product Grid -->
        <div class="product-grid">
          <% if (products && products.length > 0) { %>
            <% products.forEach((product) => { %>
              <div class="product-card">
                <img src="/assets/images/blank.png" alt="<%= product.name %>" />
                <p><a href="/details?id=<%= product.id %>"><%= product.name %></a></p>
                <p class="price">Asking Price: $<%= product.price %></p>
                <p class="condition">Condition: <%= product.condition %></p>
                <p class="description"><%= product.description %></p>
                <p class="seller">Seller: <%= product.sellerEmail %></p>
              </div>
            <% }); %>
          <% } else { %>
            <p>No products available to display.</p>
          <% } %>
        </div>
        
        
        
        
      </div>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>
