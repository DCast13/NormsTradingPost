<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

    <div class="browse-container">
      <!-- Sidebar for filters -->
      <div class="sidebar">
        <h3>Keywords</h3>
        <div class="filters">
          <button>Spring ✕</button>
          <button>Smart ✕</button>
          <button>Modern ✕</button>
        </div>

        <div class="filter-group">
          <label><input type="checkbox" checked /> Label</label>
          <label><input type="checkbox" checked /> Label</label>
          <label><input type="checkbox" checked /> Label</label>
        </div>

        <h3>Price</h3>
        <div class="filter-group">
          <input type="range" min="0" max="100" />
          <div class="price-range">
            <span>Asking Price: $0</span>
            <span>$100</span>
          </div>
        </div>

        <h3>Color</h3>
        <div class="filter-group">
          <label><input type="checkbox" checked /> Label</label>
          <label><input type="checkbox" checked /> Label</label>
          <label><input type="checkbox" checked /> Label</label>
        </div>

        <h3>Size</h3>
        <div class="filter-group">
          <label><input type="checkbox" checked /> Label</label>
          <label><input type="checkbox" checked /> Label</label>
          <label><input type="checkbox" checked /> Label</label>
        </div>
      </div>

      <!-- Product Listing -->
      <div class="products-container">
        <div class="sort-buttons">
          <button class="active">New</button>
          <button>Price ascending</button>
          <button>Price descending</button>
          <button>Rating</button>
        </div>

        <div class="product-grid">
          <% if (listings.length) { %> <% listings.forEach(listing => { %>
          <a href="/listings/details/<%= listing.id %>" class="product-card">
            <img src="<%= listing.image %>" alt="<%= listing.name %>" />
            <p><%= listing.name %></p>
            <p class="price">Asking Price: $<%= listing.price %></p>
          </a>
          <% }) %> <% } else { %>
          <p>There are no listings to display.</p>
          <% } %>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>

